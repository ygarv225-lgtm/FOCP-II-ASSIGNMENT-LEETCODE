#include <iostream>
#include <string>
using namespace std;

class Solution {
public:
    bool isPalindrome(string s) {

        string s2 = "";

        for (int i = 0; i < s.length(); i++) {

            if (s[i] >= 'a' && s[i] <= 'z') {
                s2 += s[i];
            } else if (s[i] >= 'A' && s[i] <= 'Z') {
                s2 += (s[i] + 32);
            } else if (s[i] >= '0' && s[i] <= '9') {
                s2 += s[i];
            }
        }

        for (int i = 0; i < s2.length() / 2; i++) {

            if (s2[i] != s2[s2.length() - 1 - i]) {
                return false;
            }
        }

        return true;
    }
};
